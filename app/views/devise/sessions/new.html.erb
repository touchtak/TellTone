<!--エラーメッセージ-->
<%= render "devise/shared/error_messages", resource: resource %>

<!--ページ名-->
<div class="row">
  <div class="col-md-12 text-center">
    <h2>ログイン</h2>
  </div>
</div>

<!--入力フォーム-->
<div class="row d-flex justify-content-center">
  <div class="designed-forms d-flex justify-content-center">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field mb-3">
        <%= f.label "メールアドレス" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field mb-3">
        <%= f.label "パスワード" %><br />
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field mb-3">
          <%= f.check_box :remember_me %>
          <%= f.label "パスワードを保存しますか？" %>
        </div>
      <% end %>

      <div class="actions d-flex justify-content-center">
        <div class="btn-group btn-group-md">
          <%= f.submit "ログイン", class: "btn btn-outline-success", style: "width:100%;" %>
        </div>
      </div>

      <!--新規登録ページリンク-->
      <p class="mt-3 px-2" style="background-color:#eee; border-radius:10px;">
        登録がお済みでない方は、</br>
        <%= link_to "こちら", new_user_registration_path %>から新規登録してください
      </p>
    <% end %>
  </div>
</div>


