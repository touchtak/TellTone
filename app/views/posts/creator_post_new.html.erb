<!--エラーメッセージ-->
<%= render "devise/shared/error_messages", resource: @creator_post %>

<!--投稿フォーム-->
<%= form_with model: @creator_post, url: creator_posts_path, data: { confirm: "クリエイター投稿しますか？", turbo_confirm: "クリエイター投稿しますか？" }, multipart: true do |f| %>

  <div class="row mb-3 mt-3">
    <div class="col-md-2 offset-md-3">
      <%= f.label :post_image, "画像を添付する" %>
    </div>
    <div class="col-md-7">
      <%= f.file_field :post_image %>
    </div>
  </div>

  <div class="row mb-3 mt-3">
    <div class="col-md-2 offset-md-3">
      <%= f.label :audio, "音声ファイルを添付する" %>
    </div>
    <div class="col-md-7">
      <%= f.file_field :audio %>
    </div>
  </div>

  <div class="row mt-3">
    <div class="col-md-1 offset-md-3">
      <%= f.label :body %>
    </div>
    <div class="col-md-4 offset-md-1">
      <%= f.text_area :body, placeholder: "投稿文", autofocus: true, style: "height: 200px; width: 300px;" %>
    </div>
  </div>

  <div class="row mb-3 mt-3">
    <div class="col-md-2 offset-md-3">
      <%= f.label :emotion_id, "作品のイメージ" %>
    </div>
    <div class="col-md-7">
      <%= f.collection_select :emotion_id, Emotion.all, :id, :name, { prompt: "--選択してください--" }, class: "form-control" %>
    </div>
  </div>

  <div class="row mb-3 mt-3">
    <div class="col-md-2 offset-md-3">
      <%= f.label :name, "タグ(,で区切ると複数タグ登録できます)" %>
    </div>
    <div class="col-md-7">
      <%= f.text_field :name,value: @tag_list, class: 'form-control' %>
    </div>
  </div>

  <div class="text-center mt-5">
    <%= f.submit "投稿", class: "btn btn-outline-success btn-lg" %>
  </div>
<% end %>