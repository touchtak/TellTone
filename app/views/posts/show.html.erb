<div class="row">

  <% if @post.viewer_id.present? %>
    <div class="timeline">
      <div style="width:75px; height:75px; padding:5px;">
        <%= link_to viewer_path(@post.viewer_id) do %>
          <%= image_tag(@post.viewer.get_viewer_icon, class: "img-fluid", style: "max-width: 100%; max-height: 100%; object-fit: contain;") %>
        <% end %>
        <%= link_to post_path(@post.id) do %>
          <div></div>
        <% end %>
      </div>

      <div style="padding:5px;">
        <div>
          <%= link_to viewer_path(@post.viewer_id) do %>
            <%= @post.viewer.name %><small><%= @post.user.name %></small>
          <% end %>
        </div>

        <%= link_to post_path(@post.id) do %>
          <div>
            <p class="post-body"><%= @post.body %></p>
          </div>
        <% end %>
      </div>
    </div>
    
  <!--クリエイター投稿詳細-->
  <% else %>

  <% end %>
</div>