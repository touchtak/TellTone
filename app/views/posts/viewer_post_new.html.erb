<!--ページ名-->
<div class="row">
  <div class="col-md-12 text-center">
    <h2></h2>
  </div>
</div>

<!--エラーメッセージ-->
<%= render "devise/shared/error_messages", resource: @viewer_post %>

<!--投稿フォーム-->
<%= form_with model: @viewer_post, url: viewer_posts_path, multipart: true do |f| %>

  <div class="row mt-3">
    <div class="col-md-1 offset-md-3">
      <%= f.label :body %>
    </div>
    <div class="col-md-4 offset-md-1">
      <%= f.text_area :body, placeholder: "感想をつぶやきましょう！", autofocus: true, style: "height: 200px; width: 300px;" %>
    </div>
  </div>

  <div class="row mb-3 mt-3">
    <div class="col-md-2 offset-md-3">
      <%= f.label :post_image, "画像を添付する" %>
    </div>
    <div class="col-md-7">
      <%= f.file_field :post_image %>
    </div>
  </div>

  <div class="text-center mt-5">
    <%= f.submit "新規登録", class: "btn btn-outline-success btn-lg" %>
  </div>
<% end %>