<h2>フォロワー一覧</h2>

<table class="table table-hover table-inverse">
    <tbody>
      <tr class="scroll-list jscroll">
        <% @followers.each do |follower| %>
          <td>
            <%= link_to viewer_path(follower.id) do %>
              <%= image_tag(follower.get_viewer_icon, class: "img-fluid", style: "max-width: 60px; max-height: 60px; object-fit: contain;") %>
            <% end %>
          </td>
          <td>
            <%= link_to viewer_path(follower.id) do %>
              <%= follower.name %>
            <% end %>
          </td>
        <% end %>
      </tr>
    </tbody>
</table>