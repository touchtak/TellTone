<!--ページ名-->
<div class="row">
  <div class="col-md-12 text-center">
    <h2>ビューワー情報編集</h2>
  </div>
</div>

<!--エラーメッセージ-->
<%= render "devise/shared/error_messages", resource: @viewer %>

<!--入力フォーム-->
<div class="row d-flex justify-content-center">
  <div class="designed-forms d-flex justify-content-center">
    <%= form_with model: @viewer, url: viewer_path(@viewer), method: :patch, multipart: true do |f|  %>

      <div class="field mb-3">
        <%= f.label :image, "アイコン" %>
        <%= f.file_field :image %>
      </div>

      <div class="field mb-3">
        <%= f.label '表示名' %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
      </div>

      <div class="field mb-3">
        <%= f.label '自己紹介' %><br />
        <%= f.text_area :introduction, autocomplete: "introduction" %>
      </div>

      <div class="actions d-flex justify-content-center">
        <div class="btn-group btn-group-md">
        <%= f.submit "完了", class: "btn btn-outline-success", style: "width:100%;" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
