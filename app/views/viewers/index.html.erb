<h2>ビューワー一覧</h2>

<table class="table table-hover table-inverse">
  <tbody class="scroll-list jscroll">
    <% @viewers.each do |viewer| %>
      <tr>
        <td>
          <%= link_to viewer_path(viewer.id) do %>
            <%= image_tag(viewer.get_viewer_icon, class: "img-fluid", style: "max-width: 60px; max-height: 60px; object-fit: contain;") %>
          <% end %>
        </td>
        <td>
          <%= link_to viewer_path(viewer.id), class: "black-text-link" do %>
            <%= viewer.name %>
          <% end %>
        </td>
      </tr>
      <%= paginate @viewers %>
    <% end %>
  </tbody>
</table>